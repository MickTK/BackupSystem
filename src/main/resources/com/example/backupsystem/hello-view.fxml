<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="450.0" prefWidth="482.0" spacing="20.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.backupsystem.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <AnchorPane prefHeight="40.0" prefWidth="255.0">
      <children>
      
          <Label fx:id="welcomeText" text="Origine:" />
         <TextField fx:id="sourceTextField" editable="false" layoutY="16.0" prefHeight="24.0" prefWidth="410.0" />
       <Button fx:id="sourceButton" layoutX="411.0" layoutY="16.0" mnemonicParsing="false" onAction="#selectSourcePath" text="..." />
      </children>
   </AnchorPane>
   <AnchorPane layoutX="30.0" layoutY="30.0">
      <children>
         <Label fx:id="welcomeText1" text="Destinazione:" />
         <TextField fx:id="destinationTextField" editable="false" layoutY="16.0" prefHeight="24.0" prefWidth="410.0" />
         <Button fx:id="destinationButton" layoutX="410.0" layoutY="16.0" mnemonicParsing="false" onAction="#selectDestinationPath" text="..." />
      </children>
   </AnchorPane>
   <Button fx:id="processButton" mnemonicParsing="false" onAction="#process" text="Processa" />
   <TextArea fx:id="consoleLog" editable="false" prefHeight="396.0" prefWidth="442.0" />
</VBox>
